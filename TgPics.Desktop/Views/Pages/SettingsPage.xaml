            <StackPanel Orientation="Horizontal">
                <Image
                    Height="20"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Source="{StaticResource TgIcon}" />

                <TextBlock
                    FontSize="16"
                    Text="Телеграм" />
            </StackPanel>

